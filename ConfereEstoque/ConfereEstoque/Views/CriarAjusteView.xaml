<UserControl x:Class="ConfereEstoque.Views.CriarAjusteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConfereEstoque.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="42"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Height="40">
            <Button.Template>
                <ControlTemplate>
                    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Ellipse Stroke="Black" Height="40" Width="40" VerticalAlignment="Center" HorizontalAlignment="Center" StrokeThickness="3"/>
                        <TextBlock Text="" Width="40" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <TextBlock HorizontalAlignment="Left" Margin="10,21,0,0" Grid.Row="1" TextWrapping="Wrap" Text="NUMERO" VerticalAlignment="Top" Height="16" Width="50"/>
        <TextBox HorizontalAlignment="Left" IsReadOnly="True" Height="23" Margin="94,14,0,0" Grid.Row="1" TextWrapping="Wrap" Text="{Binding Ajuste.Codigo}" VerticalAlignment="Top" Width="66"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,49,0,0" Grid.Row="1" TextWrapping="Wrap" Text="OBSERVAÇÃO" VerticalAlignment="Top" Height="16" Width="75"/>
        <TextBox Height="23" Margin="94,42,10,0" Grid.Row="1" TextWrapping="Wrap" Text="{Binding Ajuste.Observacao}" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,77,0,0" Grid.Row="1" TextWrapping="Wrap" Text="DATA CRIADO" VerticalAlignment="Top" Height="16" Width="76"/>
        <TextBox Height="23" Margin="94,70,0,0" Grid.Row="1" IsReadOnly="True" TextWrapping="Wrap" Text="{Binding Ajuste.Data}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="127"/>
        <Button Content="Criar" HorizontalAlignment="Left" Margin="31,119,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Height="22"/>
        <Button Content="Cancelar" HorizontalAlignment="Left" Margin="122,119,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Height="22"/>

    </Grid>
</UserControl>
