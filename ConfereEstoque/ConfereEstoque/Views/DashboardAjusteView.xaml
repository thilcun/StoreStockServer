<UserControl x:Class="ConfereEstoque.Views.DashboardAjusteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConfereEstoque.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="234*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="NR Ajuste:" MinWidth="100"/>
                <TextBlock Text="{Binding Ajuste.Numero}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Observação:" MinWidth="100"/>
                <TextBlock Text="{Binding Ajuste.Observacao}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Data:" MinWidth="100"/>
                <TextBlock Text="{Binding Ajuste.Data}"/>
            </StackPanel>

        </StackPanel>
        <DataGrid Grid.Row="2"/>

    </Grid>
</UserControl>
